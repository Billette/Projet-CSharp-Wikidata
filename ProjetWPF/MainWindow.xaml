<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="Foo">
        <TextBox Name="TB" Background="LightGray" Margin="162,52,477,259"
            Text="{Binding MyText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        
        <ComboBox Name="CB"
            ItemsSource="{Binding Collection}"
            DisplayMemberPath="Name"
            SelectedItem="{Binding SelectedCountry}"
            Margin="162,204,346,177" />
        
        <TextBox Name="TB2" Background="LightGray" Margin="497,204,151,140"
            Text="{Binding MyText2}"/>
    </Grid>
</Window>
